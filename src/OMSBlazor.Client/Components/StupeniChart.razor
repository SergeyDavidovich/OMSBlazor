<MudPaper Class="d-flex flex-column align-center justify-space-around p-2" Height="100%" Outlined="true">
    <MudText Class="align-self-center" Typo="Typo.h6">@Title</MudText>
    <MudChart ChartType="@ChartType"
              Height="100%"
              InputData="@Data"
              InputLabels="@Labels">
    </MudChart>
</MudPaper>

@code {
    [Parameter]
    public MudBlazor.ChartType ChartType { get; set; }

    [Parameter]
    public string[] Labels { get; set; }

    [Parameter]
    public double[] Data { get; set; }

    [Parameter]
    public string Title { get; set; }
}