@using OMSBlazor.Blazor.Components
@using ReactiveUI.Blazor
@inherits ReactiveComponentBase<CustomerStasticsViewModel>

<StupeniCard Icon="@Icons.Material.Filled.Contacts" Title="Customers" IsWithButton="false">
    <MudGrid>
        <MudItem xs="12" lg="6" md="6">
            <StupeniChart Title="Customers by countries" 
                ChartType="MudBlazor.ChartType.Pie" 
                Data="ViewModel!.CustomersByCountries.Select(x=>x.CustomersCount).Select(x=>(double)x).ToArray()"
                Labels="ViewModel!.CustomersByCountries.Select(x=>x.CountryName).ToArray()"></StupeniChart>
        </MudItem>
        <MudItem xs="12" lg="6" md="6">
            <StupeniChart Title="Purchases by customers (Top 10)"
                          ChartType="MudBlazor.ChartType.Donut"
                          Data="ViewModel!.PurchasesByCustomers.Select(x=>x.Purchases).Select(x=>(double)x).ToArray()"
                          Labels="ViewModel!.PurchasesByCustomers.Select(x=>x.CompanyName).ToArray()"></StupeniChart>
        </MudItem>
    </MudGrid>
</StupeniCard>
