        border-style: solid;
        border-width: 1px;
        border-radius: 10px;
        height: 100%;
        width: 100%;
    }
    .stastic>span{
        display: inline-block;
        text-align: center;
    }
    .whole-column-stastics{
        height: 100%;
    }
    .half-column-stastics{
        height: 50%;
    }
    #orders-stastic-first-row{
        margin-left: 5px;
        margin-right: 5px;
    }
    #orders-stastic-second-row {
        margin-top: 5px;
        margin-left: 5px;
